@using Online_Store.Models

<div class="container p-4">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Goods List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Goods" asp-action="Create" class="btn btn-primary">
                Create New Good
            </a>
        </div>
    </div>

    <br /><br />

    @model List<Goods> 
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="30%">@obj.Name</td>
                        <td width="20%">
                            <a asp-controller="Goods" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                Delete
                            </a>
                            <a asp-controller="Goods" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-info">
                                Update
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists. </p>
    }

</div>
